<div class="followingpage col-md-12">

  <div class="followinglist col-md-offset-2 col-md-8">
    <h1>Following:</h1>
    <% current_user.all_following.each do |following| %>
      <div class="followingperson">
        <a href="<%= following.propic.url %>" data-lightbox="<%= following.username %>"><div class="profpic" style="background-image: url('<%= following.propic.url %>')"></div></a>
        <span class="username"><a href="/<%= following.username %>">@<%= following.username %></a>
          <% if following.followed_by?(current_user) %>
            <%= form_tag user_unfollow_path(user_id: following.id), method: :delete, remote: true do %>
              <%= button_tag '', class: 'btn btn-primary', id: "follow-button-#{following.id}" %>
            <% end %>
          <% else %>
            <%= form_tag user_follow_path(user_id: following.id), method: :post, remote: true do %>
              <%= button_tag '', class: 'btn btn-success', id: "follow-button-#{following.id}" %>
            <% end %>
          <% end %>
        </span>
      </div>
    <% end %>


  </div>

</div>
