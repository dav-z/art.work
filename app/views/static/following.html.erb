<div class="followingpage col-md-12">

  <div class="followinglist col-md-offset-3 col-md-6">
    <h1>Following:</h1>
    <% current_user.all_following.each do |following| %>
      <div class="followingperson">
        <%= image_tag following.propic.url %>
        <span class="username"><a href="/<%= following.username %>">@<%= following.username %></a></span>
        <% if following.followed_by?(current_user) %>
          <%= form_tag user_unfollow_path(user_id: following.id), method: :delete, remote: true do %>
            <%= button_tag '', class: 'btn btn-primary', id: 'follow-button' %>
          <% end %>
        <% else %>
          <%= form_tag user_follow_path(user_id: following.id), method: :post, remote: true do %>
            <%= button_tag '', class: 'btn btn-success', id: 'follow-button' %>
          <% end %>
        <% end %>
      </div>
    <% end %>


  </div>

</div>
