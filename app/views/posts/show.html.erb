<div class="postpage col-md-offset-3 col-md-6">

  <div class="showpost">
    <h1><%= @post.caption %></h1>
    <h3><a href="/<%= @post.user.username %>">@<%= @post.user.username %></a></h3>
    <a href="<%= @post.photo.url %>" data-lightbox="<%= @post.caption %>"><%= image_tag @post.photo.url %></a>
  </div>

  <% if current_user == @post.user %>
    <%= link_to 'Edit', edit_post_path(@post) %>
  <% else %>
  <% end %>
</div>
